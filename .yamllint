---
# YAML Linting configuration for Sense360 ESPHome repository

extends: default

rules:
  line-length:
    max: 120
    level: warning

  comments:
    min-spaces-from-content: 1

  document-start:
    present: false

  truthy:
    check-keys: false

  indentation:
    spaces: 2
    indent-sequences: true

  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

ignore: |
  .git/
  .github/
  __pycache__/
  *.pyc
